leetcode 268
Given an array nums containing n distinct numbers in the range [0, n], return the only number in the range that is missing from the array.

 
#include <iostream>
#include<vector>
#include<algorithm>
using namespace std;

int main() {
  vector<int>nums={3,0,1};
  int n=nums.size();
  int sum=0;
  for(int i=0;i<nums.size();i++){
      sum+=nums[i];
  }
  int ans=n*(n+1)/2;
  cout<<abs(sum-ans);
   
  

    return 0;
}
